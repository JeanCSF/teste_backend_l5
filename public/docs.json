              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "cabecalho": {
                      "type": "object",
                      "properties": {
                        "status": {
                          "type": "integer",
                          "example": 400
                        },
                        "mensagem": {
                          "type": "string",
                          "example": "Verifique os dados fornecidos"
                        }
                      }
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "usuario": {
                            "type": "string",
                            "example": "Nenhum usuário informado"
                          },
                          "senha": {
                            "type": "string",
                            "example": "Nenhuma senha informada"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Usuário ou senha inválidos",
